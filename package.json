{
    "scripts": {
        "start": "FUNCTIONS_WORKER_RUNTIME=node swa start --app-location dist --api-location blog-api",
        "tailwind": "tailwindcss -i ./tailwind.css -o ./dist/output.css",
        "build:tailwind": "tailwindcss -i tailwind.css -o dist/output.css",
        "build:tailwind:prod": "TAILWIND_MODE=build TAILWIND_DISABLE_TOUCH=1 npm run build:tailwind -- --minify",
        "build:prod": "NODE_ENV=production npm run build && npm run build:tailwind:prod",
        "dev": "TAILWIND_MODE=watch npm run build:tailwind -- --watch",
        "optimize:js": "terser dist/**/*.js --compress --mangle --output dist/",
        "optimize:html": "html-minifier-terser --collapse-whitespace --remove-comments --minify-css true --minify-js true --input-dir dist --output-dir dist --file-ext html",
        "optimize": "npm run optimize:js && npm run optimize:html",
        "2optimize:js": "npx glob-cli 'dist/**/*.js' -- terser --compress --mangle --output",
        "2optimize:html": "npx glob-cli 'dist/**/*.html' -- html-minifier-terser --collapse-whitespace --remove-comments --minify-css true --minify-js true --output"
    },
    "devDependencies": {
        "@azure/static-web-apps-cli": "^2.0.4",
        "@tailwindcss/cli": "^4.0.9",
        "@tailwindcss/typography": "^0.5.16",
        "glob-cli": "^1.0.0",
        "html-minifier-terser": "^7.2.0",
        "tailwindcss": "^4.0.9",
        "terser": "^5.39.0"
    }
}
