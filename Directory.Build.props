<?xml version="1.0" encoding="utf-8"?>
<Project>
  <Import Project="Sdk.props" Sdk="Kaylumah.DotNet.Arcade.Sdk" />

  <PropertyGroup Label="Runtime Info">
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
  </PropertyGroup>

  <ItemGroup Condition="'$(Language)' == 'C#' AND ('$(ImplicitUsings)' == 'true' or '$(ImplicitUsings)' == 'enable')">
    <!--<Using Include="Microsoft.Extensions.Configuration" />-->
    <!--<Using Include="Microsoft.Extensions.DependencyInjection" />-->
    <!--<Using Include="Microsoft.Extensions.Logging" />-->
  </ItemGroup>

  <PropertyGroup Label="CodeAnalysis properties" Condition="'$(EnableNETAnalyzers)' == 'true'">
    <!-- true  true   0   18  38  -->
    <!-- false true   0   0   38  -->
    <!-- false false  0   0   21  -->
    <!-- true  false  0   0   38  -->
    <!-- <TreatWarningsAsErrors>true</TreatWarningsAsErrors> -->
    <!-- <EnableNETAnalyzers>true</EnableNETAnalyzers> -->
    <AnalysisLevel>Latest-Recommended</AnalysisLevel>
    <!-- <AnalysisMode>Recommended</AnalysisMode> -->
    <CodeAnalysisTreatWarningsAsErrors>true</CodeAnalysisTreatWarningsAsErrors>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
  </PropertyGroup>

  <Target Name="EmitCustomMessage" AfterTargets="Build">
    <Message Importance="High" Text="=== BEGIN '$(MSBuildProjectName)' ===" />
    <Message Importance="High" Text="The Property Language = '$(Language)' Version = '$(LangVersion)'" />
    <Message Importance="High" Text="The Property EnableNETAnalyzers = '$(EnableNETAnalyzers)'" />
    <Message Importance="High" Text="The Property AnalysisLevel = '$(AnalysisLevel)'" />
    <Message Importance="High" Text="The Property AnalysisMode = '$(AnalysisMode)'" />
    <Message Importance="High" Text="The Property TreatWarningsAsErrors = '$(TreatWarningsAsErrors)'" />
    <Message Importance="High" Text="The Property CodeAnalysisTreatWarningsAsErrors = '$(CodeAnalysisTreatWarningsAsErrors)'" />
    <Message Importance="High" Text="The Property EnforceCodeStyleInBuild = '$(EnforceCodeStyleInBuild)'" />
    <Message Importance="High" Text="=== END '$(MSBuildProjectName)' ===" />
  </Target>

  <PropertyGroup>
    <CopyrightKaylumahAlternative>Copyright (c) $(Company). All rights reserved.</CopyrightKaylumahAlternative>
    <CopyrightKaylumah>Â© Kaylumah. All rights reserved.</CopyrightKaylumah>
    <Copyright>$(CopyrightKaylumah)</Copyright>
  </PropertyGroup>

  <PropertyGroup>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
  </PropertyGroup>

  <PropertyGroup>
    <!--
        <RunSettingsFilePath>$(MSBuildThisFileDirectory)runsettings.xml</RunSettingsFilePath>
        -->
    <RunSettingsFilePath>$(MSBuildThisFileDirectory).runsettings</RunSettingsFilePath>
  </PropertyGroup>
</Project>