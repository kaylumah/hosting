---
---
<?xml version="1.0" encoding="utf-8"?>
<feed {% if site.language %}xml:lang="{{ site.language }}"{% endif %} xmlns="http://www.w3.org/2005/Atom">
  <title type="text">{{ site.title }}</title>
  <subtitle type="text">{{ site.description }}</subtitle>
  <id>{{ page.uri | absolute_url }}</id>
  <rights type="text">{{ build.copyright }}</rights>
  <updated>{{ build.time | date_to_xmlschema }}</updated>
  <logo>{{ "assets/logo_alt.svg" | absolute_url }}</logo>
  <generator>Kaylumah Site Generator</generator>
  <link rel="self" type="application/atom+xml" href="{{ page.uri | absolute_url }}" />
  <link rel="alternate" type="text/html" href="{{ 'blog.html' | absolute_url }}" />
  <link rel="related" type="text/html" href="{{ 'archive.html' | absolute_url }}" />
  {%- assign posts = site.collections['posts'] | array.sort "date" | array.reverse -%}
  {%- for post in posts -%}
  {% if post.feed != 'False' %}
  {% assign post_author = site.data.authors[post.author] %}
  <entry>
    <id>{{ post.uri | absolute_url }}</id>
    <title type="text">{{ post.title }}</title>
    {% if post.description %}<summary type="text">{{ post.description | string.strip | html.escape }}</summary>{% endif %}
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{{ post.lastmodified | date_to_xmlschema }}</updated>
    <author>
      <name>{{ post_author.full_name }}</name>
      {% if post_author.uri %}<uri>{{ post_author.uri }}</uri>{% endif %}
      {% if post_author.email %}<email>{{ post_author.email }}</email>{% endif %}
    </author>
    {% for tag in post.tags %}
    <category term="{{ site.data.tags[tag].name }}" />
    {% endfor %}
    <content type="html">{{ post.content | to_cdata }}</content>
    <link href="{{ post.uri | absolute_url }}" />
    {% assign post_image = post.image %}
    {% if post_image %}
    {% unless post_image contains "://" %}
    {% assign post_image = post_image | absolute_url %}
    {% endunless %}
    <media:thumbnail xmlns:media="http://search.yahoo.com/mrss/" url="{{ post_image | html.escape }}" />
    <media:content medium="image" url="{{ post_image | html.escape }}" xmlns:media="http://search.yahoo.com/mrss/" />
    {% endif %}
  </entry>
  {% endif %}
  {% endfor %}
</feed>