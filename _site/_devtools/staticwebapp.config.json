{
  "routes": [
    {% for redirect in site.data.redirects %}
    {
      "route": "{{ redirect.Route }}",
      "redirect": "{{ redirect.Redirect }}",
      "statusCode": {{ redirect.StatusCode }}
    },
    {% endfor %}
    {% for x in site.pages | array.sort "uri" | array.reverse %}
    {% if x.uri != "index.html" and x.uri != "404.html" %}
    {
      "route": "/{{ x.uri | string.split ".html" | array.first}}",
      "redirect": "/{{ x.uri }}",
      "statusCode": 301
    },
    {% endif %}
    {
      "route": "/assets/*.{svg,png,jpg,gif}",
      "headers": {
        "Cache-Control": "public, max-age=15552000"
      }
    },
    {
      "route": "/index.html",
      "redirect": "/",
      "statusCode": 301
    },
    {
      "route": "/feed",
      "redirect": "/feed.xml"
    },
    {
      "route": "/sitemap",
      "redirect": "/sitemap.xml"
    }
  ],
  "mimeTypes": {
    ".json": "text/json",
    ".xml": "application/xml"
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/404.html"
    }
  }
}