{
  "$schema": "https://json.schemastore.org/staticwebapp.config.json",
  "routes": [
    {
      "route": "/404.html",
      "statusCode": 404
    },
    {
      "route": "/favicon.ico",
      "redirect": "/assets/images/favicon.ico"
    },
    {
      "route": "/2023/04/14/csharp-client-for-openapi-revistted.html",
      "redirect": "/2023/04/14/csharp-client-for-openapi-revisited.html",
      "statusCode": 301
    },
    {% for x in site.pages | array.sort "uri" | array.reverse %}
    {% if x.uri != "index.html" and x.uri != "404.html" %}
    {
      "route": "/{{ x.uri | string.split ".html" | array.first}}",
      "redirect": "/{{ x.uri }}",
      "statusCode": 301
    },
    {% endif %}
    {% endfor %}
    {
      "route": "/index.html",
      "redirect": "/",
      "statusCode": 301
    },
    {
      "route": "/assets/*.{svg,png,jpg,gif}",
      "headers": {
        "Cache-Control": "public, max-age=15552000"
      }
    },
    {
      "route": "/feed",
      "redirect": "/feed.xml"
    },
    {
      "route": "/sitemap",
      "redirect": "/sitemap.xml"
    }
  ],
  "mimeTypes": {
    ".json": "text/json",
    ".xml": "application/xml"
  },
  "responseOverrides": {
    "404": {
       "rewrite": "/404.html"
     }
  }
}