{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [],
    "assignees": [ "kaylumah" ],
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0,
    "timezone": "Europe/Amsterdam",
    "packageRules": [
        {
            "matchManagers": ["npm"],
            "enabled": false
        },

        {
            "matchManagers": ["github-actions"],
            "enabled": false
        },

        {
            "matchManagers": ["nuget"],
            "matchPackageNames": [ "IDesign.Analyzers" ],
            "enabled": false
        },

        {
            "description": "Schedule Microsoft package updates for Wednesdays (7â€“10 AM CET)",
            "schedule": ["* 7 * * 3"],
            "matchManagers": ["nuget"],
            "matchPackagePatterns": [
                "^Microsoft\\.Extensions\\.",
                "^System\\."
            ],
            "groupName": "System + Microsoft Extensions",
            "labels": ["dependencies", "nuget", "microsoft"]
        },

        {
            "description": "Microsoft packages outside of regular support https://dotnet.microsoft.com/en-us/platform/support/policy/extensions",
            "matchManagers": ["nuget"],
            "matchPackageNames": [
                "Microsoft.Extensions.Diagnostics.Testing",
                "Microsoft.Extensions.TimeProvider.Testing"
            ],
            "groupName": ".NET Platform Extensions"
        },

        {
            "matchPackageNames": [
                "System.IO.Abstractions",
                "System.IO.Abstractions.TestingHelpers"
            ],
            "groupName": "System.IO Abstractions"
        },

        {
            "description": ".NET SDK",
            "matchManagers": ["nuget"],
            "matchPackageNames": ["dotnet-sdk"],
            "labels": ["dependencies", "nuget", "dotnet-sdk"],
            "reviewers": ["kaylumah"],
            "schedule": ["* 8-12 * * 1"],
            "prPriority": 10,
            "groupName": "SDK"
        },

        {
            "description": ".NET local tools from dotnet-tools.json",
            "matchManagers": ["dotnet"],
            "matchFiles": [".config/dotnet-tools.json"],
            "labels": ["dependencies", "dotnet-tools", "local-tools"],
            "groupName": "Tools"
        }
    ]
}