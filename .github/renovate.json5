{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [],
    "assignees": [ "kaylumah" ],
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0,
    "packageRules": [
        {
            "matchManagers": ["npm"],
            "enabled": false
        },

        {
            "matchManagers": ["github-actions"],
            "enabled": false
        },

        {
            "matchManagers": ["nuget"],
            "description": "Skip pinned versions",
            "matchCurrentValue": "/^\\[[^,]+\\]$/",
            "enabled": false
        },

        {
            "matchManagers": ["nuget"],
            "matchPackageNames": [ "IDesign.Analyzers" ],
            "enabled": false
        },



        {
            "description": "Schedule Microsoft package updates for Wednesdays (7â€“10 AM CET)",
            "schedule": ["0 6-9 * * 3"],
            "matchManagers": ["nuget"],
            "matchPackagePatterns": [
                "^Microsoft\\.Extensions\\.",
                "^System\\."
            ],
            "groupName": "Microsoft + System Packages",
            "labels": ["dependencies", "nuget", "microsoft"]
        },

        {
            "matchManagers": ["nuget"],
            "matchPackageNames": [
                "Microsoft.Extensions.Diagnostics.Testing",
                "Microsoft.Extensions.TimeProvider.Testing"
            ],
            "groupName": "test"
        },

        {
            "matchPackageNames": [
                "System.IO.Abstractions",
                "System.IO.Abstractions.TestingHelpers"
            ],
            "groupName": "System.IO Abstractions"
        }
    ]
}