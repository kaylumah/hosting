{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [],
    "assignees": [ "kaylumah" ],
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0,
    "timezone": "Europe/Amsterdam",
    "labels": ["dependencies"],
    "packageRules": [

        {
            "matchManagers": ["npm"],
            "enabled": false
        },

        {
            "matchManagers": ["github-actions"],
            "enabled": false
        },

        {
            "description": "Add 'dotnet' label to all .NET packages",
            "matchManagers": ["nuget"],
            "addLabels": ["dotnet"]
        },

        {
            "description": ".NET SDK",
            "matchManagers": ["nuget"],
            "matchPackageNames": ["dotnet-sdk"],
            "reviewers": ["kaylumah"],
            "schedule": ["* 8-12 * * 1"],
            "prPriority": 10,
            "groupName": "SDK2",
            "addLabels": ["sdk"]
        },

        {
            "description": ".NET local tools from dotnet-tools.json",
            "matchManagers": ["nuget"],
            "matchFiles": [".config/dotnet-tools.json"],
            "addLabels": ["tools"]
        },

        {
            "description": "Microsoft packages inside regular support https://dotnet.microsoft.com/en-us/platform/support/policy",
            "matchManagers": ["nuget"],
            "matchPackagePatterns": [
                "^Microsoft\\.Extensions\\.",
                "^System\\."
            ],
            "groupName": ".NET Extensions"
        },

        {
            "description": "Microsoft packages outside of regular support https://dotnet.microsoft.com/en-us/platform/support/policy/extensions",
            "matchManagers": ["nuget"],
            "matchPackageNames": [
                "Microsoft.Extensions.Diagnostics.Testing",
                "Microsoft.Extensions.TimeProvider.Testing"
            ],
            "groupName": ".NET Platform Extensions"
        },

        {
            "matchManagers": ["nuget"],
            "matchPackageNames": [
                "System.IO.Abstractions",
                "System.IO.Abstractions.TestingHelpers"
            ],
            "groupName": "System.IO Abstractions"
        },

        {
            "matchManagers": ["nuget"],
            "matchPackageNames": [ "IDesign.Analyzers" ],
            "enabled": false
        }
    ]
}