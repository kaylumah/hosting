{
  extends: ["config:base"],
  dependencyDashboard: true,
  regexManagers: [
    {
      // Match .NET tool versions in dotnet-tools.json
      fileMatch: ["(^|/)\\.config/dotnet-tools\\.json$"],
      matchStrings: [
        "\"(?<depName>[a-zA-Z0-9\\-\\.]+)\":\\s*{\\s*\"version\":\\s*\"(?<currentValue>[^\"]+)\""
      ],
      datasourceTemplate: "nuget",
      versioningTemplate: "semver",
      extractVersionTemplate: "{{currentValue}}",
      depNameTemplate: "{{depName}}"
    }
  ],
  packageRules: [
    {
      matchManagers: ["regex"],
      matchDatasources: ["nuget"],
      groupName: ".NET Tools"
    }
  ]
}