{
    "Metadata": {
        "ExtensionMapping": {
            ".md": ".html"
        },
        "Defaults": [
            {
                "Path": "",
                "Extensions": [ ".txt", ".js", ".css", ".json" ],
                "Values": {
                    "type": "Static"
                }
            },
            {
                "Path": "",
                "Extensions": [ ".html" ],
                "Values": {
                    "author": "max",
                    "organization": "kaylumah",
                    "image": "/assets/images/social_preview.png",
                    "sitemap": true,
                    "feed": false,
                    "featured": false,
                    "type": "Page"
                }
            },
            {
                "Scope": "posts",
                "Path": "",
                "Extensions": [ ".html" ],
                "Values": {
                    "layout": "post.html",
                    "type": "Article",
                    "socialshare": true,
                    "feed": true
                }
            }
        ]
    },
    "Site": {
        "Lang": "en",
        "Baseurl": null,
        "Url": "https://kaylumah.nl",
        "Title": "Max Hamulyák · Kaylumah",
        "Description": "A blog and portfolio website for Kaylumah, a company founded by Max Hamulyák",
        "Collections": [
            {
                "Name": "posts",
                "Output": true
            },
            {
                "Name": "drafts",
                "Output": false,
                "TreatAs": "posts"
            }
        ],
        "SupportedFileExtensions": [
            ".md",
            ".html",
            ".xml",
            ".css",
            ".js",
            ".json",
            ".txt"
        ],
        "SupportedDataFileExtensions": [
            ".yml"
        ]
    },
    "SiteConfiguration": {
        "AssetDirectory": "assets",
        "DataDirectory": "_data",
        "Destination": "dist",
        "LayoutDirectory": "_layouts",
        "PartialsDirectory": "_includes",
        "Source": "_site"
    }
}