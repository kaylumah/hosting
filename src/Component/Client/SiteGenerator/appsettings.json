{
    "Metadata": {
        "ExtensionMapping": {
            ".md": ".html"
        },
        "Defaults": [
            {
                "Path": "",
                "Values": {
                    "author": "max",
                    "image": "/assets/images/social_preview.png",
                    "draft": false,
                    "sitemap": true,
                    "hidden": false,
                    "comments": false,
                    "featured": false,
                    "type": "Page"
                }
            },
            {
                "Path": "2019",
                "Values": {
                    "layout": "post.html",
                    "type": "Article",
                    "social_share": true
                }
            },
            {
                "Path": "2020",
                "Values": {
                    "layout": "post.html",
                    "type": "Article",
                    "social_share": true
                }
            },
            {
                "Path": "2021",
                "Values": {
                    "layout": "post.html",
                    "type": "Article",
                    "social_share": true
                }
            }
        ]
    },
    "Site": {
        "Lang": "en",
        "Baseurl": null,
        "Url": "https://kaylumah.nl",
        "Title": "Website, portfolio and blog of Max Hamulyák · Kaylumah",
        "Description": "A blog and portfolio website for Kaylumah, a company founded by Max Hamulyák",
        "Collections": [
            {
                "Name": "posts",
                "Output": true
            },
            {
                "Name": "drafts",
                "Output": false,
                "TreatAs": "posts"
            }
        ],
        "SupportedFileExtensions": [
            ".md",
            ".html",
            ".xml",
            ".css",
            ".js",
            ".json",
            ".txt"
        ],
        "SupportedDataFileExtensions": [
            ".yml"
        ]
    }
}